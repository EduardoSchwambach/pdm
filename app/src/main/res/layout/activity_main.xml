<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Subtrair"
        android:layout_width="177dp"
        android:layout_height="65dp"
        android:text="Subtrair"
        tools:layout_editor_absoluteX="337dp"
        tools:layout_editor_absoluteY="353dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="167dp"
        android:layout_height="40dp"
        android:layout_marginBottom="12dp"
        android:text="Segundo Valor"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumberDecimal3"
        tools:layout_editor_absoluteX="346dp" />

    <Button
        android:id="@+id/Somar"
        android:layout_width="177dp"
        android:layout_height="65dp"
        android:text="Somar"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="353dp" />

    <EditText
        android:id="@+id/editTextNumberDecimal2"
        android:layout_width="110dp"
        android:layout_height="49dp"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="235dp" />

    <EditText
        android:id="@+id/editTextNumberDecimal3"
        android:layout_width="110dp"
        android:layout_height="49dp"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="404dp"
        tools:layout_editor_absoluteY="235dp" />

    <Button
        android:id="@+id/Dividir"
        android:layout_width="177dp"
        android:layout_height="65dp"
        android:text="Dividir"
        tools:layout_editor_absoluteX="337dp"
        tools:layout_editor_absoluteY="458dp" />

    <Button
        android:id="@+id/Multiplicar"
        android:layout_width="177dp"
        android:layout_height="65dp"
        android:text="Multiplicar"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="458dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="165dp"
        android:layout_height="43dp"
        android:layout_marginBottom="8dp"
        android:text="Primeiro Valor"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumberDecimal2"
        tools:layout_editor_absoluteX="33dp" />

</androidx.constraintlayout.widget.ConstraintLayout>